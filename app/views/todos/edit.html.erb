<div class="row m-3">
  <div class="pull-right">
    <%= link_to 'Todo List', project_todos_path(project_id: @project), class: 'btn btn-primary mr-3' %>
  </div>
  <div class="pull-right">
    <%= link_to 'Add new Todo', new_project_todo_path(project_id: @project), class: 'btn btn-primary' %>
  </div>
</div>
<div class="row mt-3">
  <div class="col-md-8 margin-auto">
    <h3 class="pl-3">Edit Todo: <%= @todo.title %></h3>
    <%= form_for(@todo, url: project_todo_path, method: 'patch') do |f| %>
      <%= render 'form', f: f %>
    <%end%>
  </div>
</div>
