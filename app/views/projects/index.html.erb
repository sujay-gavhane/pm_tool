<div class="m-3">
  <h3>Projects Listing</h3>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-bordered">
        <thead>
          <tr role='row'>
            <th class='md-cell'>Title</th>
            <th class='md-cell'>Description</th>
            <th class='sm-cell'>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if @projects.present? %>
            <% @projects.each do |project| %>
              <tr role='row'>
                <td class='md-cell'><%= project.title %></td>
                <td class='md-cell'><%= project.description %></td>
                <td class='sm-cell'><%= link_to 'Edit', edit_project_path(project) %></td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan='3' class="text-center">
                No Results Found
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>