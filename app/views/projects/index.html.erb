<h3>Projects Listing</h3>
<div class="row">
  <div class="col-md-12">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.title %></td>
            <td><%= project.description %></td>
            <td><%= link_to 'Edit', edit_project_path(project) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>