<div class="margin-auto">
  <div class="row">
    <div class="col-md-3 margin-auto">
      <h3 class="form-title">Sign up</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <div class="input-icon">
            <i class="fa fa-envelope"></i>
            <%= f.text_field :first_name, autofocus: true, placeholder: "First Name", class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="input-icon">
            <i class="fa fa-envelope"></i>
            <%= f.text_field :last_name, placeholder: "Last Name", class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="input-icon">
            <i class="fa fa-envelope"></i>
            <%= f.email_field :email, placeholder: 'Email', class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="input-icon">
            <i class="fa fa-envelope"></i>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <br />
            <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="input-icon">
            <i class="fa fa-envelope"></i>
            <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', class: 'form-control' %>
          </div>
        </div>
        <div class="form-actions">
          <%= f.submit "Sign up", class: "btn blue pull-right" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>